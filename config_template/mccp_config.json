{
  "project_name": "Example MCCP Project",
  "description": "A sample MCCP project demonstrating the new configuration structure.",
  "file_system_mapping": {
    "layer_dirs": {
      "layer1_nl_prompt": "./layer1_nl_prompt",
      "layer2_snl_behavior": "./layer2_snl_behavior",
      "layer3_symbol_pseudocode": "./layer3_symbol_pseudocode"
    },
    "config_dir": "./config",
    "docs_dir": "./docs",
    "temp_dir": "./temp"
  },
  "toolchain_settings": {
    "compiler": "mccp-compiler-v1.0",
